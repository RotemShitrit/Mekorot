<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WallMountActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Wall Mount" />

    <Button
        android:id="@+id/button_mt2w10"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:text="MT2W - 2Way units" />

    <Button
        android:id="@+id/button_mt1w"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button_mtwp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:text="MT1W - 1Way Encoder" />

    <Button
        android:id="@+id/button_mtwp1"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button_mt2w8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:text="MTWP1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_mt2w8"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button_mt1w"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:text="MT2W (8 dig)"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_mtwp"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button_mt2w10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:text="MTWP - 1Way pulse" />


</RelativeLayout>